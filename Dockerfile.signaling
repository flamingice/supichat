FROM node:18-alpine
RUN apk add --no-cache wget && \
    addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 signaling

WORKDIR /app
COPY services/signaling/package*.json ./
RUN npm ci --only=production && npm cache clean --force

COPY services/signaling/ ./
USER signaling
EXPOSE 4001
CMD ["node", "server.js"]
