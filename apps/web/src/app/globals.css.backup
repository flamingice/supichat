@tailwind base;
@tailwind components;
@tailwind utilities;

:root { color-scheme: dark; }
body { @apply bg-gray-900 text-white; }

/* Meet/Zoom inspired design tokens */
:root{
  --accent: #1a73e8;
  --accent-hover: #1557b0;
  --success: #34a853;
  --warning: #fbbc04;
  --error: #ea4335;
  --surface: #202124;
  --surface-variant: #3c4043;
  --on-surface: #e8eaed;
  --outline: #5f6368;
}

/* Meet-style components */
.meet-surface { @apply bg-gray-800 border border-gray-700; }
.meet-card { 
  @apply bg-gray-800 rounded-lg border border-gray-600 shadow-lg;
  background-color: rgba(31, 41, 55, 0.92) !important; /* fallback dark */
  color: #fff !important;
  overflow: hidden;
}
.meet-pill { @apply rounded-full px-3 py-1 text-xs font-medium bg-gray-700 text-gray-200 border border-gray-600; }
.meet-btn { 
  @apply inline-flex items-center justify-center h-10 px-4 rounded-lg font-medium transition-all duration-200;
  @apply bg-gray-700 hover:bg-gray-600 text-white border border-gray-600;
}
.meet-btn-primary { 
  @apply bg-blue-600 hover:bg-blue-700 text-white border-blue-500;
}
.meet-btn-danger { 
  @apply bg-red-600 hover:bg-red-700 text-white border-red-500;
}
.meet-btn-icon {
  @apply w-12 h-12 rounded-full flex items-center justify-center transition-all duration-200;
  @apply bg-gray-700 hover:bg-gray-600 border border-gray-600 text-white;
}
.meet-btn-icon.active { @apply bg-blue-600 border-blue-500; }
.meet-btn-icon.danger { @apply bg-red-600 hover:bg-red-700 border-red-500; }
.meet-btn-icon.disabled { @apply bg-gray-800 text-gray-500 cursor-not-allowed; }

/* Video grid styles */
.video-grid {
  @apply grid gap-2;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
}
.video-tile {
  @apply relative bg-gray-900 rounded-lg overflow-hidden;
  aspect-ratio: 16/9;
}
.video-tile video {
  @apply w-full h-full object-cover;
}
.video-overlay {
  @apply absolute inset-0 pointer-events-none;
}
.video-name {
  @apply absolute bottom-2 left-2 bg-black/70 text-white text-xs px-2 py-1 rounded;
}

/* Control bar */
.control-bar {
  @apply fixed bottom-6 left-1/2 transform -translate-x-1/2 flex items-center gap-3;
  @apply bg-gray-800 rounded-full px-4 py-3 border border-gray-600 shadow-2xl;
}

/* Chat styles */
.chat-container {
  @apply bg-gray-800 border-l border-gray-600 h-full flex flex-col;
}
.chat-message {
  @apply bg-gray-700 rounded-lg p-3 max-w-xs;
}
.chat-message.own {
  @apply bg-blue-600 ml-auto;
}

/* Input styles */
.meet-input {
  @apply w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white;
  @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent;
}
.meet-select {
  @apply w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white;
  @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent;
}

/* Defensive styles for hero section */
.hero-content {
  position: relative;
  z-index: 10;
}

.hero-decor {
  position: absolute;
  right: 0;
  bottom: 0;
  max-width: 48%;
  max-height: 50vh;
  object-fit: contain;
  pointer-events: none;
  z-index: 0;
}

/* Legacy support */
.glass{ @apply meet-card backdrop-blur; }
.tile{ @apply meet-card; }
.pill{ @apply meet-pill; }
.btn{ @apply meet-btn; }
.btn-accent{ @apply meet-btn-primary; }
.btn-danger{ @apply meet-btn-danger; }
.badge{ @apply meet-pill; }




